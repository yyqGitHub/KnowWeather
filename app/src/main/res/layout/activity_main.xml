<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <!--天气信息-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="vertical">
        <!--上部：城市和时间-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <!--刷新-->
            <LinearLayout
                android:id="@+id/LL_refresh"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10dp">

                <ImageView
                    android:id="@+id/IV_refresh"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:contentDescription="@string/update_time"
                    android:src="@mipmap/ic_refresh"/>

                <TextView
                    android:id="@+id/TV_refresh_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/update_time"
                    android:textColor="@color/color_White"
                    android:textSize="@dimen/standard_text"/>

            </LinearLayout>
            <!--城市-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/TV_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_data"
                    android:textColor="@color/color_White"
                    android:textSize="@dimen/big_text"/>

                <TextView
                    android:id="@+id/TV_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_data"
                    android:textColor="@color/color_White"
                    android:textSize="@dimen/standard_text"/>

            </LinearLayout>
            <!--日出日落-->
            <TextView
                android:id="@+id/TV_mr_ms"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:paddingRight="10dp"
                android:text="@string/no_data"
                android:textColor="@color/color_White"
                android:textSize="@dimen/standard_text"/>
        </LinearLayout>
        <!--中部：天气信息-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/TV_NOW_TEMP"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/no_data"
                android:textColor="@android:color/white"
                android:textSize="@dimen/large_text"
                android:textStyle="bold"/>

            <LinearLayout
                android:id="@+id/LL_today"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/IV_weather_icon"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:contentDescription="@string/no_data"
                    />

                <TextView
                    android:id="@+id/TV_temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_data"
                    android:textColor="@color/color_White"
                    android:textSize="@dimen/big_text"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/TV_weather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/no_data"
                    android:textColor="@color/color_White"
                    android:textSize="@dimen/middle_text"
                    android:textStyle="bold"/>

            </LinearLayout>

            <TextView
                android:id="@+id/TV_PM"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="PM"
                android:textColor="@android:color/white"
                android:textSize="@dimen/standard_text"
                />
        </LinearLayout>
        <!--底部：风力风向-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/TV_wind_direct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/no_data"
                android:textColor="@color/color_White"
                android:textSize="@dimen/standard_text"/>

            <TextView
                android:id="@+id/TV_wind_power"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/no_data"
                android:textColor="@color/color_White"
                android:textSize="@dimen/standard_text"/>
        </LinearLayout>
    </LinearLayout>

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="25dp">
    <TextView
        android:gravity="center_vertical"
        android:text="test"
        android:id="@+id/TV_date0"
        android:textSize="@dimen/standard_text"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"/>
    <TextView
        android:gravity="center"
        android:id="@+id/TV_date1"
        android:textSize="@dimen/standard_text"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"/>
    <TextView
        android:gravity="center"
        android:id="@+id/TV_date2"
        android:textSize="@dimen/standard_text"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"/>
    <TextView
        android:gravity="center"
        android:id="@+id/TV_date3"
        android:textSize="@dimen/standard_text"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"/>
    <TextView
        android:gravity="right"
        android:id="@+id/TV_date4"
        android:textSize="@dimen/standard_text"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"/>
</LinearLayout>
    <!--折线图控件信息-->
    <com.github.mikephil.charting.charts.LineChart
        android:paddingTop="10dp"
        android:id="@+id/LC_temperature"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>
